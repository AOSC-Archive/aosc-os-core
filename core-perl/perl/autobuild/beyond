# FIXME: we are using a hack here, we wanted to bump Perl
#        but not rebuilding hundreds of packages.
# Core 4 plan: use vendor packages.

mv "$PKGDIR"/usr/lib/perl5/{5.22.1,5.20.0}
mv "$PKGDIR"/usr/lib/perl5/site_perl/{5.22.1,5.20.0}

ln -sv 5.20.0 "$PKGDIR"/usr/lib/perl5/5.22.1
ln -sv 5.20.0 "$PKGDIR"/usr/lib/perl5/site_perl/5.22.1

ln -sv perl5.22.1 "$PKGDIR"/usr/bin/perl5.20.0
