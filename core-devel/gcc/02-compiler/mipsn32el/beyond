#
# RPM compatibility support issue.
#

chmod 755 $PKGDIR/usr/lib32/libgcc_s.so.1 || echo Never mind

#
# Links liblto plugin to /usr/lib{,32}/bfd-plugins, which is the binary format
# plugins path for binutils, this enables linking support using GCC when LTO
# flags are enabled.
#
# Remove if you need to prohibit users/developers from using LTO.
#

mkdir -p $PKGDIR/usr/lib32/bfd-plugins
ln -sv /usr/lib/gcc/x86_64-unknown-linux-gnu/4.9.2/liblto_plugin.so \
       $PKGDIR/usr/lib32/bfd-plugins/liblto_plugin.so

#
# Some building scripts expects "cpp" to be in /lib.
# 
# FIXME: /usr/lib compliance to aosc-aaa?
#

ln -sv /usr/bin/cpp $PKGDIR/usr/lib/cpp

#
# Misplaced file that confuses ldconfig(8), provided by GLibc.
#

mkdir -pv $PKGDIR/usr/share/gdb/auto-load/usr/lib
mv -v $PKGDIR/usr/lib32/*gdb.py $PKGDIR/usr/share/gdb/auto-load/usr/lib

#
# Remove files in gcc-runtime.
#

rm -fv $PKGDIR/usr/lib{,32}/liblsan.so*
rm -fv $PKGDIR/usr/lib{,32}/libcilkrts.so*
rm -fv $PKGDIR/usr/lib{,32}/libtsan.so*
rm -fv $PKGDIR/usr/lib{,32}/libvtv.so*
rm -fv $PKGDIR/usr/lib{,32}/libitm.so*
rm -fv $PKGDIR/usr/lib{,32}/libquadmath.so*
rm -fv $PKGDIR/usr/lib{,32}/libubsan.so*
rm -fv $PKGDIR/usr/lib{,32}/libatomic.so*
rm -fv $PKGDIR/usr/lib{,32}/libcilkrts.so*
rm -fv $PKGDIR/usr/lib{,32}/libgcc_s.so*
rm -fv $PKGDIR/usr/lib{,32}/libasan.so*
rm -fv $PKGDIR/usr/lib{,32}/libatomic.so*
rm -fv $PKGDIR/usr/lib{,32}/libgomp.so*
rm -fv $PKGDIR/usr/lib{,32}/libgfortran.so*
rm -fv $PKGDIR/usr/lib{,32}/liblsan.so*
rm -fv $PKGDIR/usr/lib{,32}/libstdc++.so*
rm -fv $PKGDIR/usr/lib{,32}/libgomp-plugin-host_nonshm.so*
rm -fv $PKGDIR/usr/lib{,32}/libobjc.so*
rm -fv $PKGDIR/usr/share/locale/de/LC_MESSAGES/libstdc++.mo
rm -fv $PKGDIR/usr/share/locale/fr/LC_MESSAGES/libstdc++.mo
rm -fv $PKGDIR/usr/share/info/libgomp.info
rm -fv $PKGDIR/usr/share/info/libquadmath.info
rm -fv $PKGDIR/usr/share/info/libitm.info
