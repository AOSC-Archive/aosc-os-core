PKGNAME=readline
PKGSEC=libs
PKGDEP="glibc ncurses"
PKGDES="GNU readline library"

ABSHADOW=no

# The following configuration:
#
# 1. Enables linking with Curses (NCurses in this case);
# 2. Enables multibyte characters support;
AUTOTOOLS_AFTER="--with-curses --enable-multibyte"

# This ensures that wide-character version of NCurses is linked
MAKE_AFTER="SHLIB_LIBS=-lncursesw"

# Cross parameters.
if [[ "${CROSS:-$ARCH}" = *cross* ]]; then
    AUTOTOOLS_AFTER+=" --host=${ARCH_TARGET[$ARCH]}"
fi

RECONF=no
