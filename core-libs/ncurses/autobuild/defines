PKGNAME=ncurses
PKGDEP=glibc
PKGDES="System V Release 4.0 curses emulation library"
PKGSEC=libs

RPMEXTRAPROVIDE="Provides: libform.so.5()(64bit) libformw.so.5()(64bit) libmenu.so.5()(64bit) libmenuw.so.5()(64bit) libncurses++w.so.5()(64bit) libncurses.so.5()(64bit) libncursesw.so.5()(64bit) libpanel.so.5()(64bit) libpanelw.so.5()(64bit)"

# The following configuration:
#
# 1.  Enables C++ bindings;
# 2.  Enables C++ shared bindings (remove if #6 is not needed);
# 3.  Enables building of static library for development use;
# 4.  Ensures that pkg-config files are installed under /usr/lib/pkgconfig;
# 5.  Enables building of shared library too;
# 6.  Disables Ada support (our GCC does not include such support);
# 7.  Disables debug support (will be stripped out anyways);
# 8.  Disables GPM support;
# 9.  Enables 256-color support;
# 10. Enables pkg-config .pc files installing (for later needs, like NetworkManager);
# 11. Enables support for wide characters (CJK, you know);

AUTOTOOLS_AFTER="--with-cxx-binding \
                 --with-cxx-shared \
                 --with-normal \
                 --with-pkg-config-libdir=/usr/lib/pkgconfig
                 --with-shared \

                 --without-ada \
                 --without-debug \
                 --without-gpm \

                 --enable-ext-colors \
                 --enable-pc-files \
                 --enable-widec"

if [[ "${CROSS:-$ARCH}" = *cross* ]]; then
    AUTOTOOLS_AFTER+=" --host=${ARCH_TARGET[$ARCH]} --target=${ARCH_TARGET[$ARCH]}"
fi

NOPARALLEL=yes
